<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bwei.jd_project">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jd_buy_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.welcomepage.WelcomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.home.view.activity.HomeActivity" />
        <activity android:name=".mvp.home.view.activity.ProductDetailsActivity" />
        <activity android:name=".mvp.classify.view.activity.ShowProductActivity" />
        <activity android:name=".mvp.home.view.activity.SelectActivity" />
        <activity android:name=".mvp.myinfo.view.activity.LoginActivity" />
        <activity android:name=".mvp.myinfo.view.activity.SettingMyInfoActivity"></activity>
    </application>

</manifest>